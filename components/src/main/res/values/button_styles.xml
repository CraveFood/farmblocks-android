<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="FarmBlocks.Button" parent="Widget.MaterialComponents.Button">
		<item name="android:textAppearance">@style/FarmBlocks.TextStyle.Button</item>
		<item name="android:background">@drawable/button_ripple_background</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:paddingStart">24dp</item>
		<item name="android:paddingEnd">24dp</item>
		<item name="android:elevation">2dp</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="FarmBlocks.Button.Primary">
		<item name="backgroundTint">@color/button_primary_background</item>
		<item name="android:textColor">@color/button_primary_text</item>
	</style>

	<style name="FarmBlocks.Button.Secondary">
		<item name="backgroundTint">@color/button_secondary_background</item>
		<item name="android:textColor">@color/button_secondary_text</item>
	</style>

	<style name="FarmBlocks.Button.Neutral">
		<item name="backgroundTint">@color/button_neutral_background</item>
		<item name="android:textColor">@color/button_neutral_text</item>
	</style>

	<style name="FarmBlocks.Button.White">
		<item name="android:background">@drawable/button_rect_ripple_background</item>
		<item name="backgroundTint">@color/button_white_background</item>
		<item name="android:textColor">@color/button_white_text</item>
	</style>

	<style name="FarmBlocks.Button.Accept">
		<item name="backgroundTint">@color/button_accept_background</item>
		<item name="android:textColor">@color/button_accept_text</item>
		<item name="android:drawablePadding">8dp</item>
		<item name="android:drawableStart">@drawable/ic_check_white</item>
	</style>

	<style name="FarmBlocks.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
		<item name="android:layout_width">56dp</item>
		<item name="android:layout_height">56dp</item>
		<item name="backgroundTint">@color/colorPrimary</item>
		<item name="android:tint">@android:color/white</item>
		<item name="maxImageSize">20dp</item>
		<item name="fabSize">normal</item>
	</style>

	<style name="FarmBlocks.FloatingActionButton.Small">
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="maxImageSize">16dp</item>
		<item name="fabSize">mini</item>
	</style>

	<style name="FarmBlocks.ButtonFlat" parent="Widget.MaterialComponents.Button">
		<item name="android:textAppearance">@style/FarmBlocks.TextStyle.Button</item>
		<item name="android:textSize">14sp</item>
		<item name="android:background">@drawable/button_flat_ripple_background</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:paddingStart">16dp</item>
		<item name="android:paddingEnd">16dp</item>
		<item name="android:elevation">0dp</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="FarmBlocks.ButtonFlat.Primary">
		<item name="backgroundTint">@color/button_primary_background</item>
		<item name="android:textColor">@color/button_primary_text</item>
	</style>

	<style name="FarmBlocks.ButtonFlat.Secondary">
		<item name="backgroundTint">@color/button_secondary_background</item>
		<item name="android:textColor">@color/button_secondary_text</item>
	</style>

	<style name="FarmBlocks.ButtonFlat.Neutral">
		<item name="backgroundTint">@color/button_neutral_background</item>
		<item name="android:textColor">@color/button_neutral_text</item>
	</style>

	<style name="FarmBlocks.ButtonFlat.White">
		<item name="backgroundTint">@color/button_white_background</item>
		<item name="android:textColor">@color/button_white_text</item>
	</style>

</resources>